---
import FaviconLinks from "@/layouts/FaviconLinks.html";

export type Props = {
  title: string;
};

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />

    <meta name="description" content="Astro description" />
