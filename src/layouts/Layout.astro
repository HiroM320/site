---
import FaviconLinks from "@/layouts/FaviconLinks.html";

import GitHubIcon from "@/components/icons/GitHubIcon.astro";
import TwitterIcon from "@/components/icons/TwitterIcon.astro";

export type Props = {
  title?: string;
};

const { title } = Astro.props;

const TRAILING_TITLE = "Hiro's website" as const;

const EXTERNAL_LINKS = [
  {
    href: "https://github.com/hirom320",
    Icon: GitHubIcon,
    label: "GitHub",
  },
  {
    href: "https://twitter.com/watermelon320RL",
    Icon: TwitterIcon,
    label: "Twitter",
  },
] as const;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />

    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <FaviconLinks />

    <title>{title ? `${title} // ${TRAILING_TITLE}` : TRAILING_TITLE}</title>
  </head>

  <body class="h-screen p-4 bg-gradient-to-br from-lime-50 to-lime-200">
    <slot />

    <footer class="absolute bottom-0 w-full">
      <div class="p-4 flex gap-6 justify-center">
        {
          EXTERNAL_LINKS.map(({ href, Icon, label }) => (
            <a
              class="flex gap-2 align-baseline"
              href={href}
              target="_blank"
              rel="noopener"
            >
              <span class="h-6 w-6">
                <Icon />
              </span>
              <span>{label}</span>
            </a>
          ))
        }
      </div>
    </footer>
  </body>
</html>
